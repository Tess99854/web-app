{% extends 'base.html.twig' %}

{% block title %}Boulangeries{% endblock %}


{% block body %}
    {{ include('includes/navbar.html.twig') }}

<div class="wrapper">
    {{ include('includes/sidebar.html.twig') }}



    <!--Content-->
    <div class="container-fluid" style="position: relative ">
        <div class="row justify-content-end " style="margin: 2em">
            <div class="col-lg-4 col-sm-12 col-xs-12">
                <form>
                    <div class="input-group" >
                        <input type="text" class="form-control" placeholder="Search" id="search" style="border-radius: 10px 0px 0px 10px">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit" style="background-color: white; border: 1px solid #DEE2E6;
                            border-radius: 0px 10px 10px 0px">
                                <i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="row my-row justify-content-center tableZoneZone"  style="margin-bottom: 0px">
            <h3 > LES BOULANGERIES </h3> </div>
        <div class="tableZone row justify-content-center" style="margin: 0px 2em; ">
            <div class="col-12" style="text-align: end; margin-right: 1em">
                <a href="{{ path('boulangerie_add')}}"> <i class="fas fa-plus addItem" ></i> </a>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">IDBoulangerie </th>
                    <th scope="col">Nom </th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Telephone </th>
                    <th scope="col">Nombre des operateurs</th>
                    <th scope="col">Responsable</th>
                    <th scope="col">Modification</th>
                    <th scope="col">Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for Boulangerie in Boulangeries %}
                <tr>


                   <th scope="row"> {{ Boulangerie.idBoulangerie }}</th>
                    <td>{{ Boulangerie.nomBL }}</td>
                    <td>{{ Boulangerie.adresse }}</td>
                    <td>{{ Boulangerie.telephone }}</td>
                    <td>{{ Boulangerie.nbOperateurs }}</td>
                    <td>{{ Boulangerie.matricule}} - {{ Boulangerie.nomResponsable }}</td>

                    <td>
                            <a href="#modify"
                             type="button" class="btn btn-success Update" data-toggle="modal" data-target="{{ path('boulangerie_modify',{'id' : Boulangerie.idBoulangerie}) }}">
                                Modifier </a>

                    </td>



                    <td><a href="{{ path('boulangerie_delete',{'id' : Boulangerie.idBoulangerie}) }}"
                            type="button" class="btn btn-danger Remove" data-toggle="modal" data-target="#exampleModalCenter">
                            Supprimer</a></td>
                </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Confirm Remove Modal-->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Confirmation de la supression</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Etes-vous sur de vouloir supprimer cet Ã©lement ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary confirmed">confirmer </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">annuler</button>
                </div>
            </div>
        </div>
    </div>
</div>

    <!-- Modification Modal-->
    <div class="modal modificationModal fade" id="modify" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModal">Modification</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

        <div class="modal-form">

 </div>
            </div>
        </div>
    </div>
<footer></footer>
