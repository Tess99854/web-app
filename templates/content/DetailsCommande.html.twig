{% extends 'base.html.twig' %}

{% block title %} Details de la commande {% endblock %}

{% block body_class %} origin {% endblock %}

{% block body %}
    <div class="addForm container" style="text-align: start">

        <h3 CLASS="formTitle changeMe" style="padding-bottom: 0px; margin-top: 1em"> Détails de la commande : {{ id }}</h3>
        <p class="changeMe" style="padding-top: 0px ;font-size: 1.4em; padding-left: 1.2em"> Demandée par la boulangerie :
            <span style="color: #88001b; font-weight: bold">{{ nomBL }}</span>  , pour le : <span style="color: #88001b; font-weight: bold"> {{ dueDate }} </span> </p>


        <hr>

        <table class="table table-bordered" style="margin-left: -0.2em">
            <thead>
            <tr>
                <th scope="col">IDProduit</th>
                <th scope="col">Designation</th>
                <th scope="col">Quantité</th>


            </tr>
            </thead>
            <tbody>

            {% for detail in details %}
            <tr>
                <th scope="row"> {{ detail.codeProduit}} </th>
                <td> {{ detail.libelle }}</td>
                <td> {{ detail.quantiteProd }}</td>


            </tr>
          {% endfor %}
            </tbody>
        </table>
    </div>

    <div style="height: 10%; "></div>
{% endblock %}